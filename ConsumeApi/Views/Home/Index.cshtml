@using ConsumeApi.ResponseModels
@model List<ProductResponseModel>
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewBag.ResponseMessage</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Stock</th>
            <th scope="col">Price</th>
            <th scope="col">Created Date</th>
            <th scope="col">Image Path</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.Price</td>
                <td>@item.CreatedDate</td>
                <td>@item.ImagePath</td>
                <td><a class="btn btn-danger" href="/Home/Remove/@item.Id">Delete</a></td>
                <td><a class="btn btn-primary" href="/Home/Update/@item.Id">Update</a></td>
            </tr>
        }


    </tbody>
</table>
<td><a class="btn btn-success" href="/Home/Create/">Add</a></td>